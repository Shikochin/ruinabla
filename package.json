    "vite-plugin-vue-devtools": "^8.0.5",
    "vitest": "^4.0.15",
    "vue-tsc": "^3.1.5",
    "wrangler": "^4.52.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "oxlint . --fix -D correctness --ignore-path .gitignore",
      "prettier --write --experimental-cli src/"
    ],
    "*.{json,css,scss}": [
      "prettier --write --experimental-cli src/"
    ]

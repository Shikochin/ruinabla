    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "eslint-plugin-oxlint": "~1.29.0",
    "eslint-plugin-vue": "~10.5.1",
    "gray-matter": "^4.0.3",
    "hast": "^1.0.0",
    "hastscript": "^9.0.1",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "npm-run-all2": "^8.0.4",
